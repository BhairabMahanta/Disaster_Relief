<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin - Feedbacks</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <link rel="stylesheet" href="/css/loader.css">
  <link rel="stylesheet" href="/css/home.css">
</head>
<body class="bg-gray-100 min-h-screen">
    <%-include('../partials/loader')%>
    <%- include('../partials/navbar') %>
<br><br><br>  
  <nav class="bg-blue-600 p-4 text-white">
    <h1 class="text-xl font-bold">All User Feedbacks</h1>
  </nav>

  <div class="p-6">
    <% if (feedbacks.length > 0) { %>
      <div class="overflow-x-auto">
        <table class="min-w-full bg-white rounded-lg shadow-md">
          <thead class="bg-blue-500 text-white">
            <tr>
              <th class="py-3 px-4 text-left">User Name</th>
              <th class="py-3 px-4 text-left">User Email</th>
              <th class="py-3 px-4 text-left">Rating</th>
              <th class="py-3 px-4 text-left">Message</th>
              <th class="py-3 px-4 text-left">Date</th>
            </tr>
          </thead>
          <tbody>
            <% feedbacks.forEach(feedback => { %>
              <tr class="border-t">
                <td class="py-3 px-4"><%= feedback.user.name %></td>
                <td class="py-3 px-4"><%= feedback.user.email %></td>
                <td class="py-3 px-4"><%= feedback.rating %> ‚≠ê</td>
                <td class="py-3 px-4"><%= feedback.message %></td>
                <td class="py-3 px-4"><%= feedback.createdAt.toLocaleString() %></td>
                <td class="py-3 px-4">
                  <form action="/admin/ngo/feedbacks/<%= feedback._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this feedback?');">
                    <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded-lg">
                      üóëÔ∏è Delete
                    </button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
          
        </table>
      </div>
    <% } else { %>
      <p>No feedbacks yet.</p>
    <% } %>
  </div>
  <script src="/js/loader.js"></script>
</body>
</html>
