<!DOCTYPE html>
<html>
<head>
  <title>GDACS Alerts</title>
  <style>
    h1 {
      text-align: center;
      color: #333;
    }

    .scroll-container {
      max-width: 900px;
      margin: 20px auto;
      background: #fff;
      padding: 20px;
      border-radius: 10px;
      height: 600px;
      overflow-y: auto;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .alert {
      margin-bottom: 20px;
      padding: 15px;
      border-left: 5px solid #f44336;
      background: #fff8f8;
      box-shadow: 0 1px 5px rgba(0,0,0,0.05);
      border-radius: 5px;
    }

    .alert h3 {
      margin: 0;
      color: #f44336;
    }

    .alert p {
      margin: 8px 0;
      color: #444;
    }

    .alert small {
      color: #777;
    }

    .filter-form {
      max-width: 900px;
      margin: 0 auto;
      padding: 20px;
      background: #eef1f5;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.05);
    }

    .filter-form label,
    .filter-form select,
    .filter-form input {
      display: block;
      width: 100%;
      margin-bottom: 15px;
      padding: 10px;
      font-size: 16px;
    }

    .filter-form button {
      background: #f44336;
      color: #fff;
      padding: 12px;
      border: none;
      border-radius: 5px;
      font-size: 16px;
      cursor: pointer;
      width: 100%;
    }

    .filter-form button:hover {
      background: #d32f2f;
    }

    body {
      font-family: sans-serif;
      background: #f7f7f7;
    }

    a {
      color: #f44336;
      text-decoration: none;
    }

    a:hover {       
      text-decoration: underline;
    }
    #unsubscribeButton{
      background-color: rgb(10, 230, 46);
    }
  </style>
</head>
<body>
  <%- include('./partials/navbar') %>  <!-- Include the navbar partial -->
  <h1>Real-Time Disaster Alerts</h1>
  <!-- 🔥 Real-Time Alerts -->
  <div class="scroll-container">
    <% alerts.forEach(alert => { %>
      <div class="alert">
        <h3><a href="<%= alert.link %>"><%= alert.title %></a></h3>
        <p><%= alert.summary %></p>
        <p>
          <small>
            Location: <%= alert.location && alert.location? alert.location : 'Unknown' %> |
            Date: <%= alert.eventDate ? alert.eventDate.toUTCString() : 'Unknown' %>
          </small>
          
          
        </p>
      </div>
    <% }) %>
  </div>
  <!-- 🌍 Filter + Email Form -->
  <% if (!user || !user.subscribedCountries || user.subscribedCountries.length === 0) { %>
    <!-- 🌍 Filter + Email Form -->
    <form class="filter-form" id="subscribeForm" method="POST" action="/api/disasters/subscribe">
      <label for="country">Select Country:</label>
      <select name="country" id="country" required>
        <option value="">-- Select Country --</option>
        <option value="India">India</option>
        <option value="USA">USA</option>
        <option value="Ecuador">Ecuador</option>
        <option value="Philippines">Philippines</option>
        <option value="Germany">Germany</option>
        <option value="Indonesia">Indonesia</option>
        <option value="Russian">Russian</option>
        <!-- Add more countries as needed -->
      </select>
  
      <button type="submit" id="subscribeButton">Subscribe to Alerts</button>
    </form>
  <% } %>
  <% if (user && user.subscribedCountries && user.subscribedCountries.length > 0) { %>
    <form class="filter-form" id="unsubscribeForm" method="POST" action="/api/disasters/unsubscribe">
      <label for="unsubscribeCountry">Unsubscribe from Country:</label>
      <select name="country" id="unsubscribeCountry" required>
        <% user.subscribedCountries.forEach(country => { %>
          <option value="<%= country %>"><%= country %></option>
        <% }) %>
      </select>
  
      <button type="submit" id="unsubscribeButton">Unsubscribe from Alerts</button>
    </form>
  <% } %>

</body>
</html>
