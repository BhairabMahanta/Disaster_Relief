  <div class="scroll-container">
    <% alerts.forEach(alert => { %>
      <div class="alert">
        <h3><a href="<%= alert.link %>"><%= alert.title %></a></h3>
        <p><%= alert.summary %></p>
        <p>
          <small>
            Location: <%= alert.location && alert.location? alert.location : 'Unknown' %> |
            Date: <%= alert.eventDate ? alert.eventDate.toUTCString() : 'Unknown' %>
          </small>
          
          
        </p>
      </div>
    <% }) %>
  </div>
