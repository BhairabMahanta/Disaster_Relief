<h2>Emergency Contacts</h2>
<div id="emergency-contacts">
    <div class="contact-card">
        <img src="/img/police.png" alt="Police Icon">
        <div class="contact-info">
            <h3>Police</h3>
            <p>911</p>
        </div>
    </div>
    <div class="contact-card">
        <img src="/img/fire.png" alt="Fire Department Icon">
        <div class="contact-info">
            <h3>Fire Department</h3>
            <p>101</p>
        </div>
    </div>
    <div class="contact-card">
        <img src="/img/medical.png" alt="Medical Emergency Icon">
        <div class="contact-info">
            <h3>Medical Emergency</h3>
            <p>102</p>
        </div>
    </div>
    <div class="contact-card">
        <img src="/img/disaster.png" alt="Disaster Helpline Icon">
        <div class="contact-info">
            <h3>Disaster Helpline</h3>
            <p>108</p>
        </div>
    </div>
</div>

<h2>Add Your Emergency Contacts</h2>
<div id="add-contacts">
    <form id="contact-form" action="/resources/addcontact" method="post">
        <input type="text" id="contact-name" placeholder="Contact Name" name="name" required>
        <input type="tel" id="contact-number" placeholder="Contact Number" name="number" required>
        <button type="submit">Add Contact</button>
    </form>

    <% if (allContacts.length > 0) { %>
        <h3>Your Saved Contacts</h3>
        <% allContacts.forEach(contact => { %>
            <div id="user-contacts">
                <span>Name: <%= contact.name %></span>
                <span>Number: <%= contact.number %></span>
            </div>
        <% }) %>
    <% } else { %>
        <p>No contacts added yet.</p>
    <% } %>
</div>

